			<script type="text/javascript">
			var osMap;
			
			function init(){
			  osMap = new OpenSpace.Map('map');
			  osMap.setCenter(new OpenSpace.MapPoint(450485, 206389), 3);  
			}
			</script>
			
		<body onload="init()">
		  <div id="map"></div>

